# Build stage
FROM node:20-alpine as builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build && \
    echo "Build complete. Checking dist contents:" && \
    ls -la dist/

# Production stage with Express
FROM node:20-alpine

WORKDIR /app

# Copy package.json for express dependency
COPY package*.json ./

# Install only express for production
RUN npm install express

# Copy built files from builder
COPY --from=builder /app/dist ./dist

# Copy server file
COPY server.js ./

# Debug: List contents
RUN echo "Container contents:" && \
    ls -la && \
    echo "Dist contents:" && \
    ls -la dist/

# Expose port
EXPOSE 8080

# Start the Express server
CMD ["node", "server.js"]